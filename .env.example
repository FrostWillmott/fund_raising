# Окружение: development или production
DJANGO_ENV=development
DJANGO_SETTINGS_MODULE="fund_raising.${DJANGO_ENV}"

# Секретный ключ Django
SECRET_KEY=django-insecure-YourSecretKeyHere

# Список разрешённых хостов (для production через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Email SMTP настройки (production)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=supersecretpassword

# MySQL настройки (production)
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_db_password
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=supersecret

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Redis Cache URL
REDIS_CACHE_URL=redis://redis:6379/1